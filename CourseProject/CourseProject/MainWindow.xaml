                                    <TextBlock>A+</TextBlock>
                                    <TextBlock>A-</TextBlock>
                                    <TextBlock>B+</TextBlock>
                                    <TextBlock>B-</TextBlock>
                                    <TextBlock>B-</TextBlock>
                                    <TextBlock>AB+</TextBlock>
                                    <TextBlock>AB-</TextBlock>
                                    <TextBlock>O+</TextBlock>
                                    <TextBlock>O-</TextBlock>
                                </ComboBox>

                                <TextBox
                                    x:Name="tb_avdonor_by_group_and_addr"
