                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label
                                    Grid.Column="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Content="Not Available donors by blood group: " />

                                <ComboBox
                                    x:Name="cb_unavdonor_by_group_and_addr"
                                    Grid.Column="1"
                                    Width="240"
