                                    <TextBox
                                        x:Name="taker_address"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        Width="240"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                    <Grid
                                        Grid.Row="5"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Button
                                            x:Name="Add_taker_btn"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Width="110"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Click="Add_taker_btn_Click"
                                            Content="Add taker" />
                                        <Button
                                            x:Name="Update_taker_btn"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Width="110"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Click="Update_taker_btn_Click"
                                            Content="Update info" />
                                        <Button
                                            x:Name="Delete_taker_btn"
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            Width="110"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Click="Delete_taker_btn_Click"
                                            Content="Delete taker"
                                            Cursor="Hand" />
                                        <Button
                                            x:Name="Reset_taker_btn"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Width="110"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Click="Reset_taker_btn_Click"
                                            Content="Reset"
                                            Cursor="Hand" />
                                    </Grid>
                                </Grid>
                                <ScrollViewer Grid.Column="1">
                                    <DataGrid
                                        x:Name="DGTakers"
                                        Width="999"
                                        Height="704"
                                        BorderThickness="2"
                                        ColumnWidth="*"
                                        IsReadOnly="True"
                                        SelectedItem="{Binding SelectedItemProperty}"
                                        SelectionChanged="TakerDataGrid_SelectionChanged" />
                                </ScrollViewer>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Blood Bank">
                        <ScrollViewer>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30*" />
                                    <ColumnDefinition Width="70*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Margin="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40*" />
                                        <ColumnDefinition Width="60*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Label
