<Window
    x:Class="CourseProject.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CourseProject"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Combination of route permutation algorithm and RSA"
    Width="1500"
    Height="800"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    Icon="/Images/drop.png"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    ScrollViewer.VerticalScrollBarVisibility="Disabled"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid Margin="0" Background="White">
        <materialDesign:DialogHost BorderBrush="{DynamicResource MaterialDesignDivider}">
            <materialDesign:DialogHost.DialogContent>
                <Grid
                    Width="300"
                    Height="240"
                    HorizontalAlignment="Center">
                    <StackPanel Margin="15" Orientation="Vertical">
                        <materialDesign:PackIcon
                            Width="50"
                            Height="50"
                            HorizontalAlignment="Center"
                            Foreground="{StaticResource PrimaryHueMidBrush}"
                            Kind="InfoBox" />
                        <TextBlock
                            Width="200"
                            Margin="15,5"
                            HorizontalAlignment="Center"
                            Foreground="Gray"
                            TextAlignment="Center"
                            TextWrapping="Wrap">
                            Course project completed by a student
                        </TextBlock>
                        <TextBlock
                            Width="200"
                            Margin="15,5"
                            HorizontalAlignment="Center"
                            Foreground="Gray"
                            TextAlignment="Center"
                            TextWrapping="Wrap">
                            3 courses of the 1st group of specialty ISIT
                        </TextBlock>
                        <TextBlock
                            Width="200"
                            Margin="15,5"
                            HorizontalAlignment="Center"
                            Foreground="Gray"
                            TextAlignment="Center"
                            TextWrapping="Wrap">
                            Poznyak Polina Pavlovna
                        </TextBlock>
                    </StackPanel>
                    <StackPanel
                        Margin="15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <Button
                            Margin="4"
                            VerticalAlignment="Center"
                            Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                            Style="{DynamicResource MaterialDesignFlatButton}">
                            Закрыть
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>

            <Grid>
                <Grid
                    Width="1500"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Background="Red"
                    MouseDown="Grid_MouseDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Width="30"
                        Height="30"
                        Margin="0,0,5,0"
                        Padding="0"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Red"
                        BorderThickness="0"
                        Click="Exit_btn_Click"
                        Cursor="Hand"
                        Foreground="White"
                        Style="{x:Null}">
                        <materialDesign:PackIcon
                            Width="25"
                            Height="25"
                            Kind="ExitToApp" />
                    </Button>
                    <Button
                        Grid.Column="0"
                        Width="30"
                        Height="30"
                        Margin="35,0,0,0"
                        Padding="0"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Red"
                        BorderThickness="0"
                        Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                        Cursor="Hand"
                        Foreground="White"
                        Style="{x:Null}">
                        <materialDesign:PackIcon
                            Width="25"
                            Height="25"
                            Kind="InfoBox" />
                    </Button>
                    <Button
                        Grid.Column="0"
                        Width="30"
                        Height="30"
                        Margin="70,0,0,0"
                        Padding="0"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Red"
                        BorderThickness="0"
                        Click="RefreshDBInfoClick"
                        Cursor="Hand"
                        Foreground="White"
                        Style="{x:Null}">
                        <materialDesign:PackIcon
                            Width="25"
                            Height="25"
                            Kind="Refresh" />
                    </Button>
                    <Button
                        Grid.Column="2"
                        Width="30"
                        Height="30"
                        Margin="0,0,35,0"
                        Padding="0"
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Bottom"
                        Background="Red"
                        BorderThickness="0"
                        Click="Minimise_Button_Click"
                        Cursor="Hand"
                        Foreground="White"
                        Style="{x:Null}">
                        <materialDesign:PackIcon
                            Width="25"
                            Height="25"
                            Kind="WindowMinimize" />
                    </Button>
                    <Button
                        Grid.Column="2"
                        Width="30"
                        Height="30"
                        Padding="0"
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Red"
                        BorderThickness="0"
                        Click="Close_Button_Click"
                        Cursor="Hand"
                        Foreground="White"
                        Style="{x:Null}">
                        <materialDesign:PackIcon
                            Width="25"
                            Height="25"
                            Kind="CloseCircleOutline" />
                    </Button>
                </Grid>
                <TabControl Margin="0,30,0,0">
                    <TabItem Header="Donor">
                        <ScrollViewer>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30*" />
                                    <ColumnDefinition Width="70*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Margin="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40*" />
                                        <ColumnDefinition Width="60*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="Donor name" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="Donor blood group" />
                                    <Label
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="Donor phone number" />
                                    <Label
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="Donor address" />
                                    <Label
                                        Grid.Row="4"
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="Last donation date" />
                                    <TextBox
                                        x:Name="donor_name"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Width="240"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                    <ComboBox
                                        x:Name="donor_blood_group"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Width="240">
                                        <TextBlock>A+</TextBlock>
                                        <TextBlock>A-</TextBlock>
                                        <TextBlock>B+</TextBlock>
                                        <TextBlock>B-</TextBlock>
                                        <TextBlock>B-</TextBlock>
                                        <TextBlock>AB+</TextBlock>
                                        <TextBlock>AB-</TextBlock>
                                        <TextBlock>O+</TextBlock>
                                        <TextBlock>O-</TextBlock>
                                    </ComboBox>
                                    <TextBox
                                        x:Name="donor_phone_number"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Width="240"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                    <TextBox
                                        x:Name="donor_address"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        Width="240"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                    <DatePicker
                                        x:Name="last_donation_date"
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        Width="240"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        SelectedDateFormat="Long" />
                                    <Grid
                                        Grid.Row="5"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Button
                                            x:Name="add_donor_btn"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Width="110"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Click="Add_donor_btn_Click"
                                            Content="Add donor" />
                                        <Button
                                            x:Name="update_btn"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Width="110"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Click="update_btn_Click"
                                            Content="Update info" />
                                        <Button
                                            x:Name="delete_btn"
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            Width="110"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Click="delete_btn_Click"
                                            Content="Delete donor" />
                                        <Button
                                            x:Name="reset_donor_info_btn"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Width="110"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Click="Reset_donor_info_btn_Click"
                                            Content="Reset"
                                            Cursor="Hand" />
                                    </Grid>
                                </Grid>
                                <ScrollViewer Grid.Column="1">
                                    <DataGrid
                                        x:Name="DGDonors"
                                        Width="999"
                                        Height="704"
                                        BorderThickness="2"
                                        ColumnWidth="*"
                                        IsReadOnly="True"
                                        SelectedItem="{Binding SelectedItemProperty}"
                                        SelectionChanged="DonorDataGrid_SelectionChanged" />
                                </ScrollViewer>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Tacker">
                        <ScrollViewer>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30*" />
                                    <ColumnDefinition Width="70*" />
                                </Grid.ColumnDefinitions>
