                                        Grid.Column="1"
                                        Width="240"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                    <ComboBox
                                        x:Name="taker_blood_group"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Width="240">
                                        <TextBlock>A+</TextBlock>
                                        <TextBlock>A-</TextBlock>
                                        <TextBlock>B+</TextBlock>
                                        <TextBlock>B-</TextBlock>
                                        <TextBlock>B-</TextBlock>
